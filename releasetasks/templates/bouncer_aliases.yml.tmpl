{% set buildername = "release-{branch}-{product}_bouncer_aliases".format(branch, product) %}
-
    taskId: "{{ stableSlugId('{}_human_decision'.format(buildername)) }}"
    reruns: 5
    task:
        provisionerId: "null-provisioner"
        workerType: "human-decision"
        created: "{{ now }}"
        deadline: "{{ now.replace(days=4) }}"
        expires: "{{ never }}"
        priority: "high"
        retries: 5
        payload:
            description: "required"
        metadata:
            name: "{{ product }} {{ branch }} bouncer aliases human decision task"
            description: "Release Promotion bouncer aliases human decision task"
            owner: "release@mozilla.com"
            source: https://github.com/mozilla/releasetasks

        extra:
            signing:
               signature: {{ sign_task(stableSlugId('{}_human_decision'.format(buildername)), valid_for=4 * 24 * 3600) }}
            {% if running_tests is defined %}
            task_name: "{{ buildername }}_human_decision"
            {% endif %}

-
    taskId: "{{ stableSlugId(buildername) }}"
    requires:
        - "{{ stableSlugId('{}_human_decision'.format(buildername)) }}"
    reruns: 5
    task:
        provisionerId: "buildbot-bridge"
        workerType: "buildbot-bridge"
        created: "{{ now }}"
        deadline: "{{ now.replace(days=4) }}"
        expires: "{{ never }}"
        priority: "high"
        retries: 5
        scopes:
            - project:releng:buildbot-bridge:builder-name:{{ buildername }}

        payload:
            buildername: "{{ buildername }}"
            sourcestamp:
                branch: "{{ repo_path }}"
                revision: "{{ revision }}"
            properties:
                product: "{{ product }}"
                version: "{{ version }}"
                next_version: "{{ next_version }}"
                build_number: {{ buildNumber }}
                repo_path: "{{ repo_path }}"
                script_repo_revision: "{{ revision }}"
                release_promotion: true
                revision: "{{ revision }}"
                tuxedo_server_url: "{{ tuxedo_server_url }}"

        metadata:
            name: "{{ product }} {{ branch }} bouncer aliases"
            description: "Release Promotion bouncer aliases"
            owner: "release@mozilla.com"
            source: https://github.com/mozilla/releasetasks

        extra:
            signing:
               signature: {{ sign_task(stableSlugId(buildername), valid_for=4 * 24 * 3600) }}
            {% if running_tests is defined %}
            task_name: "{{ buildername }}"
            {% endif %}
